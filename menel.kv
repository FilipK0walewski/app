FloatLayout:
    Button:
        id: start_button
        text: "start game"
        size_hint: .2, .2
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        on_release:
            self.disabled = True
            self.opacity = 0
            quit_button.disabled = True
            quit_button.opacity = 0
            app.start_game()
    Button:
        id: quit_button
        text: "exit game"
        size_hint: .2, .2
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        on_release:
            self.disabled = True
            self.opacity = 0
            app.stop()
    Label:
        id: q
        text: 'Pierdolnikerzy'
        font_name: 'Aleo-Regular.otf'
        font_size: self.height / 4
        size_hint: (1, 0.17)
        pos_hint: {'x': 0, 'y': 0.7}
