FloatLayout:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'background.png'
    Button:
        id: start_button
        text: "start game"
        size_hint: .4, .2
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        background_normal: ''
        background_color: app.button_color
        on_release:
            self.disabled = True
            quit_button.disabled = True
            app.start_game()
    Button:
        id: quit_button
        text: "exit game"
        size_hint: .4, .2
        pos_hint: {'center_x': 0.5, 'center_y': 0.28}
        background_normal: ''
        background_color: app.button_color
        on_release:
            self.disabled = True
            app.stop()
    Label:
        id: q
        text: 'Pierdolnikerzy'
        font_name: 'Aleo-Regular.otf'
        font_size: '40sp'
        size_hint: (None, 0.2)
        pos_hint: {'center_x': 0.5, 'y': 0.65}
    Label:
        id: timer
        text: '30'
        opacity: 0
        font_name: 'Aleo-Regular.otf'
        font_size: 25
        size_hint: (1, 0.17)
        pos_hint: {'x_center': 0.5, 'y': 0.85}
